extends layout

block content
    .main.container
        .row
            .col-md-6.col-md-offset-3
                h1.display-4.m-b-2 Sign Up

                // form for registration
                form(method='POST' action='/register')
                    div.form-group
                        label(for='forename') Forename:
                        input#forename.form-control(type='text', placeholder='Forename' name='forename')
                    div.form-group
                        label(for='surname') Surname:
                        input#surname.form-control(type='text', placeholder='Surname' name='surname')
                    div.form-group
                        label(for='username') Username:
                        input#username.form-control(type='text', placeholder='Username' name='username')
                    div.form-group
                        label(for='email') Email:
                        input#email.form-control(type='email' placeholder='Email' name='email')
                    div.form-group
                        label(for='password') Password:
                        input#password.form-control(type='password' name='password')
                    button.btn.btn-primary(type='submit') Sign up